<?xml version="1.0"?>

<!--
	Example file for QuickTime video input with the module InputVideoQT
	This example has been tested with iSight
-->

<group title="InputVideoQT Test">

    
    <module
        class = "Randomizer"
        name = "R"
        outputsize_x = "5"
        outputsize_y = "5"
    />

    <module
        class   = "InputVideoAV"
        name	= "CAMERA"			
        size_x  = "800"
        size_y  =  "600"
        list_devices = "yes"
        device_id = "0x1a1243000ac83470"
    />

    <view name="Inputs">
        <object
            class   ="Image"
            title   = "Color RGB"
            type	= "rgb"
            module  = "CAMERA"
            source  = "RED+GREEN+BLUE"
            x="0" y="0"
            w="4" h="3"
            min = "0"
            max = "1"
        />
        
        <object
            x="0" y="0"
            w="4" h="3"
            class="CLines"
            title="CLines"
            module="R"
            source="OUTPUT"
            color = "red, green, blue, yellow"
		/>
    </view>

    <view name="Inputs">
        <object
            class   ="Image"
            title   = "RGB"
            type	= "rgb"
            module  = "CAMERA"
            source  = "RED+GREEN+BLUE"
            x="0" y="0"
            w="2" h="2"
            min = "0"
            max = "1"
        />
			
        <object
            class   ="Image"
            title   = "Gray"
            type	= "gray"
            module  = "CAMERA"
            source  = "INTENSITY"
            x="2" y="0"
            w="2" h="2"
        />
    </view>

    <view name="Large">
        <object
            class   ="Image"
            title   = "Camera"
            type	= "rgb"
            module  = "CAMERA+CAMERA+CAMERA"
            source  = "RED+GREEN+BLUE"
            x="0" y="0"
            w="3" h="2"
            min = "0"
            max = "1"
        />
    </view>

    <module class = "Logger" name = "Logger" />
</group>

